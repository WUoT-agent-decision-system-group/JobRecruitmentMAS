{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "detailed": {
      "format": "%(asctime)s.%(msecs)03d - %(name)s - %(levelname)s - %(message)s",
      "datefmt": "%Y-%m-%d %H:%M:%S"
    },
    "simple": {
      "format": "%(asctime)s.%(msecs)03d [%(name)s] %(levelname)s: %(message)s",
      "datefmt": "%H:%M:%S"
    }
  },
  "handlers": {
    "file": {
      "class": "logging.FileHandler",
      "formatter": "detailed",
      "filename": "default.log",
      "mode": "a"
    },
    "console": {
      "class": "logging.StreamHandler",
      "formatter": "simple",
      "stream": "ext://sys.stdout"
    }
  },
  "loggers": {
    "Agent": {
      "level": "DEBUG",
      "handlers": ["file", "console"],
      "propagate": false
    },
    "MongoConnector": {
      "level": "DEBUG",
      "handlers": ["file", "console"],
      "propagate": false
    }
  }
}
